<%- include("header") %>
<%- include("nav",{type:'all'}) %>
	<link rel="stylesheet" href="/styles/home.css">
	<link rel="stylesheet" href="/styles/markdown.css">
	<script src="/js/Markdown.Converter.js"></script>
	<script src="/js/highlight.min.js"></script>
	<script>hljs.initHighlightingOnLoad();</script>
	

	<div class="container home">
		<div class="article-content">
			<div class="banner">
				<img src="/images/banner.png">
			</div>
			<ul class="note-list" infinite-scroll-url="/">
				<% articleList.forEach(function(list,i){ %>
					<% if( list.cover ){ %>
						<li class="have-img">
					<% }else{ %>
						<li>
					<% }%>	
						<% if( list.cover ){ %>
						<a class="wrap-img" href="/article/<%= list.article_id %>" target="_blank">
							<img class="  img-blur-done" src="<%= list.cover %>"
							 alt="120">
						</a>
						<% }%>
						<div class="content">
							<div class="author">
								<a class="avatar" target="_blank" href="/users/<%= list.users.id %>">
									<img src="<%= list.users.avatar %>"
									 alt="64">
								</a>
								<div class="info">
									<a class="nickname" target="_blank" href="/users/<%= list.users.id %>"><%= list.users.nickname %></a>
									<a target="_blank" href="/users/<%= list.users.id %>">
										<img width="30" height="30" class="badge-icon" data-toggle="tooltip" title="" src="//upload.jianshu.io/user_badge/94d76265-aab1-4559-8d12-1da9f6be21ce"
										 alt="94d76265 aab1 4559 8d12 1da9f6be21ce" data-original-title="简书观察优秀作者">
									</a>
									<span class="time" data-shared-at="2018-04-25T16:35:27+08:00"><%= list.unixtime %></span>
								</div>
							</div>
							<a class="title" target="_blank" href="/article/<%= list.article_id %>">
								<%= list.title %>
							</a>
							<p class="abstract">
								<%= list.content %>
							</p>
							<div class="meta">
								<a target="_blank" href="/article/<%= list.article_id %>">
									<i class="iconfont ic-list-read"></i> 12084
								</a>
								<a target="_blank" href="/article/<%= list.article_id %>">
									<i class="iconfont ic-list-comments"></i> 145
								</a>
								<span>
									<i class="iconfont ic-list-like"></i> 432</span>
								<span>
									<i class="iconfont ic-list-money"></i> 2</span>
							</div>
						</div>
					</li>
					<% }); %>
			</ul>
		</div>
		<div class="aside">
			<div class="board">
				<a href="javascript:void(0);">
					<img src="/images/banner-s-3-7123fd94750759acf7eca05b871e9d17.png" alt="Banner s 3">
				</a>
				<a href="javascript:void(0);">
					<img src="/images/banner-s-4-b70da70d679593510ac93a172dfbaeaa.png" alt="Banner s 4">
				</a>
				<a href="javascript:void(0);">
					<img src="/images/banner-s-5-291e00e9156f30791fe24e3de9c39171.png" alt="Banner s 5">
				</a>
				<a href="javascript:void(0):">
					<img src="/images/banner-s-6-c4d6335bfd688f2ca1115b42b04c28a7.png" alt="Banner s 6">
				</a>
			</div>
			<a id="index-aside-download-qrbox" class="col-xs-8 download" data-toggle="popover" data-placement="top" data-html="true"
			 data-trigger="hover" data-original-title="" title="">
				<img class="qrcode" src="/images/download-index-side-qrcode-0a0cf38b7413c60bb8d2627fd9eebd00.png" alt="Download index side qrcode">
				<div class="info">
					<div class="title">下载简书手机App
						<i class="iconfont ic-link"></i>
					</div>
					<div class="description">随时随地发现和创作内容</div>
				</div>
			</a>
			<div class="recommended-authors">
				<div class="title">
					<span>推荐作者</span>
					<a class="page-change">
						<i class="iconfont ic-search-change" style="transform: rotate(0deg);"></i>
						换一批
					</a>
				</div>
				<ul class="list">
					<% author.forEach(function(list,i){ %>
					<li>
						<a href="/users/<%= list.id %>" target="_blank" class="avatar">
							<img src="<%= list.avatar %>">
						</a>
						<a class="follow" state="0">
							<i class="iconfont ic-follow"></i>关注
						</a>
						<a href="/users/<%= list.id %>" target="_blank" class="name">
							<%= list.nickname %>
						</a>
						<p>
							写了105.4k字 · 2.2k喜欢
						</p>
					</li>
					<% }); %>
				</ul>
			</div>
		</div>
	</div>



	<% include footer %>